<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>form</title>
  </head>
  <body>
    <div class="erros">
      <% if (errosValidacao) { %>
        <ul>
          <% for(var i = 0; i < errosValidacao.length; i++){ %>
            <li><%= errosValidacao[i].param %> - <%= errosValidacao[i].msg %></li>
          <% } %>
        </ul>
      <% } %>
    </div>
    <form action="/produtos" method="post">
      <div>
        <label>
          Título
          <input type="text" name="titulo" value="<%= produto.titulo %>" placeholder="Coloque o título  do livro aqui">
        </label>
      </div>
      <div>
        <label>
          Preço
          <input type="text" name="preco" value="<%= produto.preco %>" placeholder="ex: R$ 150">
        </label>
      </div>
      <div>
        <label>
          Descrição
          <textarea name="descricao" rows="10" cols="20"><%= produto.descricao %></textarea>
        </label>
      </div>
      <button type="submit">Gravar</button>
    </form>
  </body>
</html>
