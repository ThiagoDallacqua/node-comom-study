<html>
  <body>
    <h1>Listando os Produtos</h1>

    <table>
      <tr>
        <td>id</td>
        <td>título</td>
        <td>descrição</td>
        <td>preço</td>
      </tr>
      <% for(var i=0; i < lista.length; i++){ %>
          <tr>
            <td><%= lista[i].id %></td>
            <td><%= lista[i].titulo %></td>
            <td><%= lista[i].descricao %></td>
            <td><%= lista[i].preco %></td>
          </tr>
      <% } %>
    </table>

    <a href="/produtos/form">Adicionar livro</a>
  </body>
</html>
