<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Curso Node</title>
  </head>
  <body>
    <form action="/promocoes" method="post">
      <div>
        <input type="text" name="mensagem" placeholder="Coloque a mensagem da promoção">
      </div>
      <div>
        <select name="livro[id]">
          <% for(var i=0; i < lista.length; i++){ %>
              <option value="<%= lista[i].id %>"><%= lista[i].titulo %></option>
          <% } %>
        </select>
      </div>
      <button type="submit" name="button">Cadastrar Promoção</button>
    </form>
  </body>
</html>
